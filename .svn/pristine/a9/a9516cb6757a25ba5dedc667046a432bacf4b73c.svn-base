@charset "utf-8";
/* Gallery Slider */
.flex-container a:active,
.flexslider a:active,
.flex-container a:focus,
.flexslider a:focus  {outline:none;}
.slides,
.flex-control-nav,
.flex-direction-nav {margin:0; padding:0; list-style:none;} 
.flex-direction-nav {display:none;}
.main_visual_wrap .flex-direction-nav {display:block;}

.flexslider .slides > li {display:none; -webkit-backface-visibility: hidden;} /* Hide the slides before the JS is loaded. Avoids image jumping */
.flexslider .slides img {width:100%; display:block;}
.flex-pauseplay span {text-transform: capitalize;}
.slides:after {content: "."; display: block; clear: both; visibility: hidden; line-height: 0; height: 0;} 
html[xmlns] .slides {display: block;} 
* html .slides {height: 1%;}
.no-js .slides > li:first-child {display: block;}
.flex-viewport {max-height: 2000px; -webkit-transition: all 1s ease; -moz-transition: all 1s ease; transition: all 1s ease;}
.loading .flex-viewport {max-height: 300px;}
.flexslider .slides {zoom: 1;}
.carousel li {margin-right:5px}


/* Gallery */
.main_contents .flexslider {position:relative; margin:0 auto; padding:0; width:auto; max-width:450px; height:auto;}
.flexslider {position:relative; margin:0 auto; padding:0; width:auto; max-width:450px; height:auto;}

.main_visual_wrap .flexslider {position:relative; margin:0 auto; padding:0; width:auto; max-width:100%; height:auto;}
.main_introduction_wrap .flexslider{background:url("../img/introduction_line.png") left top repeat-y; padding-left:55px;}
.flex-control-paging li {margin:0 2px;} /* 도트 */
.flex-control-paging li a {display:inline-block; width:13px; height:13px; text-indent:9999px; overflow:hidden; background:url('../img/dot_nav.png') no-repeat right top; border:none; background-size:200% auto;}

.main_visual_wrap .flex-control-paging li a {display:inline-block; width:14px; height:14px; text-indent:9999px; overflow:hidden; background:url('../img/main_dot_nav.png') no-repeat right top; border:none; background-size:200% auto;}

.flex-control-paging li a.flex-active,
.flex-control-paging li a:hover {background-position:left top;}
.flex-viewport {max-height: 2000px; -webkit-transition: all 1s ease; -moz-transition: all 1s ease; transition: all 1s ease;}
.flexslider .slides {zoom: 1;}



/* Direction Nav */
.flex-direction-nav {height:30px;}
.flex-direction-nav a {width:30px; height:30px; margin:-20px 0 0 0; display:block; position:absolute; top: 50%; z-index:10; cursor:pointer; text-indent:-9999px; opacity: 0; -webkit-transition: all .3s ease;}
.flex-direction-nav .flex-next {background-position:100% 0; right:0px; }
.flex-direction-nav .flex-prev {left:0px;}
.flex-direction-nav .flex-disabled {opacity: .3!important; filter:alpha(opacity=30); cursor:default;}

.flexslider{position:relative;}


/* Control Nav */
.flex-control-nav {position:absolute; top:0px; right:0; z-index:9999; margin:0; width:450px; text-align:right;}
.flex-control-nav li {margin: 0 6px; display: inline-block; zoom: 1; *display: inline;}

.flex-direction-nav{position:absolute; top:188px; left:50%; z-index:1; margin-left:-441px; width:882px; text-align:center;}/* display:none; */
.flex-direction-nav a {width:36px; height:44px; display:block; position:absolute; top: 50%; z-index:9999999; cursor:pointer; text-indent:-9999px; opacity: 1; -webkit-transition: all .3s ease;  background:url('../img/nav.png') no-repeat;}
.flex-direction-nav a:hover {width:36px; height:44px; display:block; position:absolute; top: 50%; z-index:10; cursor:pointer; text-indent:-9999px; opacity: 1; -webkit-transition: all .3s ease;  background:url('../img/nav.png') no-repeat;}
.flex-direction-nav .flex-next {background-position:100% 0; }
.flex-direction-nav .flex-next:hover {background-position:100% 0; } 

.flexslider:hover .flex-next {opacity: 1;}
.flexslider:hover .flex-prev {opacity: 1;}
.flexslider:hover .flex-next:hover, .flexslider:hover .flex-prev:hover {opacity: 1;}

.flex-direction-nav .flex-disabled {opacity: -1!important; filter:alpha(opacity=30); cursor:default;}
.flex-direction-nav a:before{font-size: 0; line-height:1; display: inline-block;}


