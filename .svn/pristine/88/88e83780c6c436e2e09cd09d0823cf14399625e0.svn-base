@charset "utf-8";
/* 요소(element) 여백 초기화  */
body{position:relative; zoom:1; }
html, body,form,
div, span,
dl, dt, dd, ul, ol, li,
h1, h2, h3, h4, h5, h6,
blockquote, p, address, pre, cite,
table, th, td {
	margin:0;
	padding:0;
	font-family:"Nanum Gothic"; 
	}

/* 제목요소 */
h1, h2, h3, h4, h5, h6 {  
	font-size:100%;   
	font-weight:normal;   
	} 

legend, #header h2, #slogan h2, #footer h2 {
	position:absolute;
	width:0px;
	height:0px;
	font-size:0;
	line-height:0;
}

body {
	font-size:12px;
	line-height:1.2;
	font-family:"Nanum Gothic",Nanum Gothic, Gulim, Verdana, AppleGothic, sans-serif;
	width: 100%; height: 100%;
	overflow-x:hidden;
}


img {
	vertical-align:top;
}

label, select, input, textarea {
	vertical-align:middle;
}

textarea{font-size:12px; line-height:1.5; font-family:"Nanum Gothic",Nanum Gothic, Gulim, Verdana, AppleGothic, sans-serif;}

/* 테두리 없애기 */
fieldset, img, abbr, acronym { border:0 none; } 

/* 목록 */
ol, ul { list-style:none; }

/* 테이블 - 마크업에 'cellspacing="0"' 지정 함께 필요 */
table {border-collapse:collapse; border-spacing:0;font-size:12px;}
th, td {padding:0;}
caption, hr, legend {display:none;}

/* 텍스트 관련 요소 초기화 */
address, caption, strong, em, cite {
	font-weight:normal;
	font-style:normal;
	}
ins { text-decoration:none; }
del { text-decoration:line-through; }

/* 인용문 */
blockquote:before, blockquote:after, q:before, q:after { content:""; }
blockquote,q { quotes:"" ""; }

/* 수평선*/
hr { display:none; }

/* others */
blockquote, dl, dd, p {margin:0; padding:0;}